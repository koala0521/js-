	<script type="text/javascript">
		page={};
		function createDialog(){
			page.dialog1=Elf.components.dialog({
			    title:"筛选",
				content:'<div style="width: 600px;height: 400px;background-color: #0000cc"></div>',
				onClose:function(target){
					console.info("窗口已关闭！！！");
				},
				onPreClose:function(target,callback){
					Elf.components.confirm({
						text:"是否要关闭窗口",
						modle:false,
						buttons:{
							"确定":function(){
								console.info("允许窗口关闭！！！");
								callback(true);
							},
							"取消":function(){
								console.info("阻止窗口关闭！！！");
								callback(false);
							}
						}
					});
				}
			});
		}
